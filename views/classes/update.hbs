<div class="page-wrapper">
    <!doctype html>
    <html lang="en">

    <head>
        <title>Contact Form 02</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <link href='https://fonts.googleapis.com/css?family=Roboto:400,100,300,700' rel='stylesheet' type='text/css'>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

        <link rel="stylesheet" href="/admin/css/style.css">

    </head>

    <body>
        <section class="ftco-section">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        
                            <div class="row no-gutters" style="justify-content: center">
                                <div class="col-lg-8 col-md-7 order-md-last d-flex align-items-stretch">
                                    <div class="contact-wrap w-100 p-md-5 p-4">
                                        <h3 class="mb-4">Update Class</h3>
                                        <div id="form-message-warning" class="mb-4"></div>
                                        <div id="form-message-success" class="mb-4">
                                            Your message was sent, thank you!
                                        </div>
                                        <form method="POST" action="/classes/update/p/{{_class._class_ID}}" class="contactForm">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="label" for="name">Class Name</label>
                                                        <input type="text" class="form-control" name="_className" id="name"
                                                            placeholder="Name" value="{{_class._className}}">
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">


                                                        <label class="label" for="course-select">Course:</label>

                                                        <select class="form-control" name="_course_ID" id="course-select">
                                                            <option value={{_class.[Course._course_ID]}}>{{_class.[Course._name]}}</option>

                                                            {{#each courses}}
                                                            <option value={{this._course_ID}}>{{this._name}}</option>
                                                            {{/each}}
                                                        </select>
                                                    </div>
                                                </div>



                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="label" for="startDate">Start date</label>
                                                        <input type="date" class="form-control" name="_startDate" id="startDate"
                                                            value={{_class._startDate}}>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="label" for="endDate">End date</label>
                                                        <input type="date" class="form-control" name="_endDate" id="endDate"
                                                            value={{_class._endDate}}>
                                                    </div>
                                                </div>

                                               

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="label" for="schedule-select">Choose schedule:</label>

                                                        <select class="form-control" name="_schedule_ID_1" id="schedule-select">
                                                            <option value={{_class._schedule_ID_1}}>{{_class.[Schedule1._dayOfWeek]}}: {{_class.[Schedule1._startHour]}}-{{_class.[Schedule1._endHour]}}</option>
                                                            {{#each schedules}}
                                                            <option value={{this._schedule_ID}}>{{this._dayOfWeek}}: {{this._startHour}}-{{this._endHour}}</option>
                                                            {{/each}}
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="label" for="schedule-select"></label>

                                                        <select class="form-control" name="_schedule_ID_2" id="schedule-select" >
                                                            <option value={{_class._schedule_ID_2}}>{{_class.[Schedule2._dayOfWeek]}}: {{_class.[Schedule2._startHour]}}-{{_class.[Schedule2._endHour]}}</option>
                                                            {{#each schedules}}
                                                            <option value={{this._schedule_ID}}>{{this._dayOfWeek}}: {{this._startHour}}-{{this._endHour}}</option>
                                                            {{/each}}
                                                        </select>
                                                    </div>
                                                </div>

                                               


                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="label" for="maxNumber">Max Number</label>
                                                        <input type="number" class="form-control" name="_maxNumber"
                                                            id="maxNumber" placeholder="Max Number" min="0" value={{_class._maxNumber}}>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">


                                                        <label class="label" for="teacher-select">Teacher:</label>

                                                        <select class="form-control" name="_teacher_ID" id="teacher-select">
                                                           <option value={{_class._teacher_ID}}>{{_class.[Teacher.User._firstName]}} {{_class.[Teacher.User._lastName]}}</option>
                    
                                                            {{#each teachers}}
                                                            <option value={{this._teacher_ID}}>{{this.[User._firstName]}} {{this.[User._lastName]}}</option>
                                                            {{/each}}
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="label" for="room">Room:</label>

                                                       <input type="text" class="form-control" name="_room"
                                                            id="room" placeholder="Room" value={{_class._room}}>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="label" for="lesson">Number of lessons</label>
                                                        <input type="text" class="form-control" name="_numberOfLesson"
                                                            id="lesson" placeholder="Number of lesson" min="0" value={{_class._numberOfLesson}}>
                                                    </div>
                                                </div>
                    
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <input type="submit" value="Update"
                                                            class="btn btn-primary">
                                                        <div class="submitting"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </div>
        </section>

        <script src="/admin/js/jquery.min.js"></script>
        <script src="/admin/js/popper.js"></script>
        <script src="/admin/js/bootstrap.min.js"></script>
        <script src="/admin/js/jquery.validate.min.js"></script>
        <script src="/admin/js/main.js"></script>

    </body>

    </html>


</div>