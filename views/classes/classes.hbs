<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="page-title mb-0 p-0">Class</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Class</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-md-6 col-4 align-self-center">
                <div class="text-end upgrade-btn">
                    <a href="/classes/insert"
                        class="btn btn-success d-none d-md-inline-block text-white" >Add Class</a>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- column -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Basic Table</h4>
                        <h6 class="card-subtitle">Add class <code>.table</code></h6>
                        <div class="table-responsive">
                            <table class="table user-table no-wrap">
                                <thead>
                                    <tr>
                                        <th class="border-top-0">#</th>
                                        <th class="border-top-0">Class Name</th>
                                        <th class="border-top-0">Course</th>
                                        <th class="border-top-0">Start on</th>
                                        <th class="border-top-0">End on</th>
                                        <th class="border-top-0">Teacher</th>
                                        <th class="border-top-0"></th>
                                        <th class="border-top-0"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each classes}}
                                    <tr>
                                        <td>{{this._class_ID}}</td>
                                        <td>{{this._className}}</td>
                                        <td>{{this.[Course._name]}}</td>
                                        <td>{{this._startDate}}</td>
                                        <td>{{this._endDate}}</td>
                                        <td>{{this.[Teacher.User._firstName]}} {{this.[Teacher.User._lastName]}}</td>
                                        <td><a href='/classes/delete/{{this._class_ID}}' style="text-decoration: none;">Delete</a></td>
                                        <td><a href='/classes/edit/{{this._class_ID}}'style="text-decoration: none;">Edit</a></td>
                                        
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
        
        
           <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">

                {{#paginate pagination type="previous"}}
                <li {{#if disabled}}class="page-item disabled" {{/if}}><a a class="page-link" href="?p={{n}}">Prev</a></li>
                {{/paginate}}
                {{#paginate pagination type="middle" limit="3"}}
                <li {{#if active}}class="page-item active" {{/if}}><a a class="page-link" href="?p={{n}}">{{n}}</a></li>
                {{/paginate}}
                {{#paginate pagination type="next"}}
                <li {{#if disabled}}class="page-item disabled" {{/if}}><a a class="page-link" href="?p={{n}}">Next</a></li>
                {{/paginate}}

            </ul>
            </nav>
    </div>
    
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->

    <!-- ============================================================== -->
    <!-- End footer -->
