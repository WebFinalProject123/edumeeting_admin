<style>
    .class-item {
        background-color: #e5e8f0;
        border: 2px solid black;
        border-radius: 10px;
    }

    .card-img-top {
        border-radius: 10px 10px 0 0;
    }

    .btn-container {
        display: flex;
        margin: 10px auto;
        justify-content: center;
        align-items: center;
    }

    .btn-primary{
        margin: 0 1rem;
    }
    .btn-customized{
        min-width: 5rem;
    }
    
    
</style>
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row align-items-center">
            <div class="col-md-6 col-8 align-self-center">
                <h3 class="page-title mb-0 p-0">Class</h3>
                <div class="d-flex align-items-center">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Class</li>
                        </ol>
                    </nav>
                </div>
            </div>
            <div class="col-md-6 col-4 align-self-center">
                <div class="text-end upgrade-btn">
                    <a href="/classes/insert" class="btn btn-success d-none d-md-inline-block text-white">Add Class</a>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <!-- column -->
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Our Available Classes</h2>
                        <div class="table-responsive" style="overflow: hidden;">
                            <table class="table user-table">
                               
                                <div class="row row-cols-1 row-cols-md-3 g-4 ">
                                         {{#each classes}}
                                        <div class="col" >
                                            <div class="card h-100 class-item">
                                                <img src={{this.[Course._image]}}
                                                    class="card-img-top" alt="...">
                                                <div class="card-body">
                                                    <h5 class="card-title">{{this.[Course._name]}}</h5>
                                                    <p class="card-text">Class: {{this._className}}</p>
                                                    <p class="card-text">Period: {{this._startDate}} - {{this._endDate}}</p>
                                                    <p class="card-text">Teacher: {{this.[Teacher.User._firstName]}} {{this.[Teacher.User._lastName]}}</p>
                                                    <p class="card-text">Number of lesson: {{this._numberOfLesson}}</p>
                                                    <p class="card-text">Current Number: {{this._currentNumber}}/{{this._maxNumber}}</p>
                                                </div>
                                                <div class="container btn-container">
                                                    <button onclick="window.location.href='/classes/delete/{{this._class_ID}}';" class="btn btn-primary btn-customized">Delete</button>
                                                    <button onclick="window.location.href='/classes/update/{{this._class_ID}}';" class="btn btn-primary btn-customized">Edit</button>
                                                </div>
                                                

                                            </div>
                                            
                                        
                                        
                                    </div>
                                     {{/each}}
                            </table>
                             
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->


        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">

                {{#paginate pagination type="previous"}}
                <li {{#if disabled}}class="page-item disabled" {{/if}}><a a class="page-link" href="?p={{n}}">Prev</a>
                </li>
                {{/paginate}}
                {{#paginate pagination type="middle" limit="3"}}
                <li {{#if active}}class="page-item active" {{/if}}><a a class="page-link" href="?p={{n}}">{{n}}</a></li>
                {{/paginate}}
                {{#paginate pagination type="next"}}
                <li {{#if disabled}}class="page-item disabled" {{/if}}><a a class="page-link" href="?p={{n}}">Next</a>
                </li>
                {{/paginate}}

            </ul>
        </nav>
    </div>

    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- footer -->
    <!-- ============================================================== -->

    <!-- ============================================================== -->
    <!-- End footer -->
    <!-- ============================================================== -->

</div>
